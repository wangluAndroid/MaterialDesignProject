<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidwanga.serenitynanian.serenityproject.BehaviorActivity">

    <TextView
        android:id="@+id/dependency"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="dependency"
        android:gravity="center"
        android:layout_gravity="left|top"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_gravity="right|top"
        android:background="@color/colorPrimary"
        android:text="auto"
        app:layout_behavior="com.androidwanga.serenitynanian.serenityproject.behavior.DependencyBehavior" />
</android.support.design.widget.CoordinatorLayout>
